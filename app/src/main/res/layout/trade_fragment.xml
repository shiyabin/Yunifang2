<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/gwc_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="购物车"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gwc_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="编辑"
            android:textColor="#fc6b87"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/gwc_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" >

        <CheckBox
            android:id="@+id/img_nox"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/gwc_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1.5"
            android:text="全选"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gwc_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="总计:￥0.00"
            android:textColor="#fc6b87"
            android:textSize="18sp" />

        <Button
            android:id="@+id/gwc_but_jisuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1.2"
            android:background="#fc6b87"
            android:text="结算"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
