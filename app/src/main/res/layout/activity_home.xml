<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/btn_sy">
            <ImageView
                android:id="@+id/iv_xw"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/sy2"/>
            <TextView
                android:id="@+id/tv_xw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="首页"
                android:textColor="#f00"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/btn_fl">
            <ImageView
                android:id="@+id/iv_sp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/fl"/>
            <TextView
                android:id="@+id/tv_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="分类"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/btn_gwc">
            <ImageView
                android:id="@+id/iv_fx"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/gwc"/>
            <TextView
                android:id="@+id/tv_fx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="购物车"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/btn_wd">
            <ImageView
                android:id="@+id/iv_wd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/gr2"/>
            <TextView
                android:id="@+id/tv_wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10dp"
                android:text="我的"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
